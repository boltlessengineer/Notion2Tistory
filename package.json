{
    "name": "notion2tistory",
    "productName": "Notion2Tistory",
    "version": "0.11.1",
    "description": "Notion to Tistory. Converts notion html file to upload to Tistory",
    "keywords": [
        "notion",
        "tistory",
        "api",
        "blog"
    ],
    "author": {
        "name": "boltlessengineer",
        "email": "boltlessengineer@gmail.com",
        "url": "https://boltlessengineer.tistory.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/boltlessengineer/Notion2Tistory"
    },
    "main": "src/index.js",
    "scripts": {
        "start": "electron-forge start",
        "clean": "rm -rf dist",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "publish": "electron-forge publish",
        "lint": "echo \"No linting configured\"",
        "build:win64": "electron-builder --win --x64"
    },
    "build": {
        "productName": "Notion2Tistory",
        "appId": "com.electron.notion2tistory",
        "asar": true,
        "protocols": {
            "name": "Notion2Tistory",
            "schemes": [
                "notion2tistory"
            ]
        },
        "win": {
            "target": [
                "zip",
                "nsis"
            ],
            "icon": "./assets/icons/win/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "shortcutName": "Notion2Tistory"
        },
        "directories": {
            "buildResources": "./assets/installer/",
            "output": "./dist/",
            "app": "."
        }
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "notion2tistory"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ]
        }
    },
    "dependencies": {
        "adm-zip": "^0.4.16",
        "electron-squirrel-startup": "^1.0.0",
        "electron-updater": "^4.3.4",
        "jsdom": "^16.4.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "6.0.0-beta.52",
        "@electron-forge/maker-deb": "6.0.0-beta.52",
        "@electron-forge/maker-rpm": "6.0.0-beta.52",
        "@electron-forge/maker-squirrel": "6.0.0-beta.52",
        "@electron-forge/maker-zip": "6.0.0-beta.52",
        "electron": "9.2.1",
        "electron-builder": "^22.8.0"
    }
}
